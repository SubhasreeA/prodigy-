<body>

  <h1>üå§Ô∏è Weather App</h1>

  <div>
    <input type="text" id="cityInput" placeholder="Enter city name">
    <button onclick="getWeather()">Get Weather</button>
  </div>

  <div class="weather-box" id="weatherBox">
    <h2 id="cityName"></h2>
    <p id="temperature"></p>
    <p id="description"></p>
    <p id="humidity"></p>
    <p id="wind"></p>
  </div>

  <script>
    async function getWeather() {
      const city = document.getElementById('cityInput').value;
      const apiKey = 'YOUR_API_KEY'; // üîë Replace with your OpenWeatherMap API key
      const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`;

      try {
        const response = await fetch(url);
        if (!response.ok) throw new Error("City not found");

        const data = await response.json();

        document.getElementById('weatherBox').style.display = 'block';
        document.getElementById('cityName').textContent = `${data.name}, ${data.sys.country}`;
        document.getElementById('temperature').textContent = `üå°Ô∏è Temperature: ${data.main.temp} ¬∞C`;
        document.getElementById('description').textContent = `üå•Ô∏è Weather: ${data.weather[0].description}`;
        document.getElementById('humidity').textContent = `üíß Humidity: ${data.main.humidity}%`;
        document.getElementById('wind').textContent = `üå¨Ô∏è Wind Speed: ${data.wind.speed} m/s`;
      } catch (error) {
        alert("Error: " + error.message);
      }
    }
  </script>

